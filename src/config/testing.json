{
  "_metadata": {
    "file_version": "v5.0-1-1.2-1",
    "last_modified": "2026-01-06",
    "clean_architecture": "Compliant",
    "description": "Ash-Dash v5.0 Testing Configuration Overrides",
    "note": "Optimized for debugging and reproducible test runs",
    "repository": "https://github.com/the-alphabet-cartel/ash-dash",
    "community": "The Alphabet Cartel - https://discord.gg/alphabetcartel | https://alphabetcartel.org"
  },

  "logging": {
    "description": "Testing logging - human readable for debugging",
    "level": "${DASH_LOG_LEVEL}",
    "format": "${DASH_LOG_FORMAT}",
    "file": "${DASH_LOG_FILE}",
    "console": "${DASH_LOG_CONSOLE}",
    "defaults": {
      "level": "DEBUG",
      "format": "human",
      "file": "/app/logs/ash-dash-tests.log",
      "console": true
    },
    "validation": {
      "level": {
        "type": "string",
        "allowed_values": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
        "required": true
      },
      "format": {
        "type": "string",
        "allowed_values": ["json", "human"],
        "required": true
      },
      "file": {
        "type": "string",
        "required": true
      },
      "console": {
        "type": "boolean",
        "required": false
      }
    }
  },

  "server": {
    "description": "Testing server - debug mode enabled",
    "defaults": {
      "debug": true
    }
  }
}
