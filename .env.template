# =============================================================================
# ASH ANALYTICS DASHBOARD CONFIGURATION
# Environment variables for Ash Dashboard v2.1
# Repository: https://github.com/the-alphabet-cartel/ash-dash
# Part of: The Alphabet Cartel (https://discord.gg/alphabetcartel) Ash Ecosystem
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
GLOBAL_DASH_API_PORT=8883

# SSL Configuration
DASH_ENABLE_SSL=false
DASH_SSL_CERT_PATH=/app/certs/cert.pem
DASH_SSL_KEY_PATH=/app/certs/key.pem

# =============================================================================
# ASH ECOSYSTEM SERVICE ENDPOINTS
# =============================================================================
# Ash Bot API (Discord Bot with Crisis Detection)
GLOBAL_BOT_API_URL=http://10.20.30.253:8882
DASH_BOT_API_TIMEOUT=5000

# Ash NLP Server API (Machine Learning Analysis)
GLOBAL_NLP_API_URL=http://10.20.30.253:8881
DASH_NLP_API_TIMEOUT=10000

# =============================================================================
# DASHBOARD FEATURES & PERFORMANCE
# =============================================================================
# Cache Settings
DASH_CACHE_TTL=600

# Real-time Updates
DASH_ENABLE_SOCKET_IO=true
DASH_METRICS_UPDATE_INTERVAL=60000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
GLOBAL_LOG_LEVEL=info
DASH_LOG_FILE=ash-dash.log
DASH_ENABLE_ACCESS_LOGS=true

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
GLOBAL_ENABLE_CORS=true
GLOBAL_API_ALLOWED_ORIGINS=*
DASH_RATE_LIMIT_WINDOW=900000
DASH_RATE_LIMIT_MAX=100
DASH_RATE_LIMIT_MESSAGE="Too many requests, please try again later"

# =============================================================================
# AUTHENTICATION & SESSIONS
# =============================================================================
# Session Management
GLOBAL_SESSION_TOKEN=/run/secrets/session_secret

