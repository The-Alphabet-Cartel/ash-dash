# =============================================================================
# ASH ANALYTICS DASHBOARD CONFIGURATION
# Environment variables for Ash Dashboard v1.0
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=8883
DASH_PORT=8883

# SSL Configuration
ENABLE_SSL=true
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem
# For development without SSL, set ENABLE_SSL=false

# =============================================================================
# ASH ECOSYSTEM SERVICE ENDPOINTS
# =============================================================================
# Ash Bot API (Discord Bot with Crisis Detection)
ASH_BOT_API=http://10.20.30.253:8882
ASH_BOT_API_TIMEOUT=5000

# Ash NLP Server API (Machine Learning Analysis)
ASH_NLP_API=http://10.20.30.16:8881
ASH_NLP_API_TIMEOUT=10000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
SERVICE_CHECK_TIMEOUT=5000

# =============================================================================
# DASHBOARD FEATURES & PERFORMANCE
# =============================================================================
# Cache Settings
CACHE_TTL=300
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Real-time Updates
ENABLE_SOCKET_IO=true
METRICS_UPDATE_INTERVAL=30000
CRISIS_ALERTS_UPDATE_INTERVAL=10000

# Chart Data Settings
CHART_DATA_POINTS=24
TREND_ANALYSIS_HOURS=24
MAX_CRISIS_HISTORY_DAYS=7

# =============================================================================
# DASHBOARD BRANDING & COMMUNITY
# =============================================================================
DASHBOARD_TITLE="Ash Analytics Dashboard"
DASHBOARD_SUBTITLE="The Alphabet Cartel Crisis Detection Analytics"
COMMUNITY_NAME="The Alphabet Cartel"
COMMUNITY_DISCORD="https://discord.gg/alphabetcartel"
DASHBOARD_THEME="dark"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=ash-dash.log
LOG_DIR=./logs
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true

# Performance Logging
LOG_API_RESPONSE_TIMES=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
ENABLE_CORS=true
CORS_ORIGINS=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE="Too many requests, please try again later"

# Security Headers
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=false
SESSION_SECRET=your_session_secret_here_change_in_production

# IP Filtering (optional)
# ALLOWED_IPS=10.20.30.0/24,127.0.0.1
# BLOCKED_IPS=

# =============================================================================
# DATA STORAGE & PERSISTENCE
# =============================================================================
# Redis Configuration (for caching and real-time data)
REDIS_HOST=ash-dash-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=ash-dash:

# Data Directories
DATA_DIR=./data
CACHE_DIR=./cache
TEMP_DIR=./temp

# =============================================================================
# API RESPONSE CONFIGURATION
# =============================================================================
# Default responses when services are unavailable
DEFAULT_BOT_STATUS=unknown
DEFAULT_NLP_STATUS=unknown
DEFAULT_CRISIS_COUNT=0
ENABLE_FALLBACK_DATA=true

# API Retry Configuration
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000
API_CIRCUIT_BREAKER_THRESHOLD=5

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_DATA=false
MOCK_CRISIS_EVENTS=false

# Hot Reload (development only)
ENABLE_HOT_RELOAD=false
WATCH_FILES=false

# =============================================================================
# CRISIS DETECTION DISPLAY SETTINGS
# =============================================================================
# Alert Display Configuration
SHOW_HIGH_CRISIS_ALERTS=true
SHOW_MEDIUM_CRISIS_ALERTS=true
SHOW_LOW_CRISIS_ALERTS=true
ALERT_FLASH_DURATION=3000

# Crisis Level Colors (CSS color values)
HIGH_CRISIS_COLOR=#dc2626
MEDIUM_CRISIS_COLOR=#f59e0b
LOW_CRISIS_COLOR=#16a34a
SUCCESS_COLOR=#059669
WARNING_COLOR=#d97706
ERROR_COLOR=#dc2626

# =============================================================================
# LEARNING SYSTEM DASHBOARD SETTINGS
# =============================================================================
# Learning Analytics Display
SHOW_LEARNING_STATS=true
SHOW_FALSE_POSITIVE_LEARNING=true
SHOW_FALSE_NEGATIVE_LEARNING=true
LEARNING_HISTORY_DAYS=7

# Learning Progress Visualization
LEARNING_CHART_TYPE=line
LEARNING_DATA_POINTS=168
SHOW_LEARNING_EFFECTIVENESS=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Real-time Notifications
ENABLE_BROWSER_NOTIFICATIONS=true
NOTIFICATION_PERMISSION_REQUEST=true
CRISIS_NOTIFICATION_SOUND=true

# Email Notifications (optional - future feature)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Automated Backups
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# Maintenance Mode
ENABLE_MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Dashboard is temporarily unavailable for maintenance"

# =============================================================================
# DOCKER SECRETS CONFIGURATION
# =============================================================================
# For production deployment with Docker Secrets, uncomment and use:
# SSL_CERT_PATH=/run/secrets/ssl_cert
# SSL_KEY_PATH=/run/secrets/ssl_key
# SESSION_SECRET=/run/secrets/session_secret

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================
# 1. Generate SSL certificates for HTTPS:
#    openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -days 365 -nodes
#
# 2. Set strong session secret:
#    SESSION_SECRET=$(openssl rand -base64 32)
#
# 3. Configure proper CORS origins:
#    CORS_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com
#
# 4. Enable IP filtering if needed:
#    ALLOWED_IPS=10.20.30.0/24,your.admin.ip.address
#
# 5. Set appropriate log levels:
#    LOG_LEVEL=warn (for production)
#
# 6. Configure Redis password:
#    REDIS_PASSWORD=your_strong_redis_password
#
# 7. Disable debug features:
#    ENABLE_DEBUG_MODE=false
#    ENABLE_MOCK_DATA=false