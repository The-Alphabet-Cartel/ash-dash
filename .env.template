# =============================================================================
# ASH ANALYTICS DASHBOARD CONFIGURATION
# Environment variables for Ash Dashboard v1.0
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
GLOBAL_ENVIRONMENT=production
GLOBAL_DASH_API_PORT=8883
GLOBAL_DASH_API_PORT=8883

# SSL Configuration
DASH_ENABLE_SSL=true
DASH_SSL_CERT_PATH=/app/certs/cert.pem
DASH_SSL_KEY_PATH=/app/certs/key.pem
# For development without SSL, set DASH_ENABLE_SSL=false

# =============================================================================
# ASH ECOSYSTEM SERVICE ENDPOINTS
# =============================================================================
# Ash Bot API (Discord Bot with Crisis Detection)
GLOBAL_BOT_API_URL=http://10.20.30.253:8882
DASH_BOT_API_TIMEOUT=5000

# Ash NLP Server API (Machine Learning Analysis)
GLOBAL_NLP_API_URL=http://10.20.30.253:8881
DASH_NLP_API_TIMEOUT=10000

# Health Check Configuration
DASH_HEALTH_CHECK_INTERVAL=120000
DASH_SERVICE_CHECK_TIMEOUT=10000

# =============================================================================
# DASHBOARD FEATURES & PERFORMANCE
# =============================================================================
# Cache Settings
DASH_CACHE_TTL=600
DASH_ENABLE_ANALYTICS=true
DASH_ANALYTICS_RETENTION_DAYS=90

# Real-time Updates
DASH_ENABLE_SOCKET_IO=true
DASH_METRICS_UPDATE_INTERVAL=60000
DASH_CRISIS_ALERTS_UPDATE_INTERVAL=30000

# Chart Data Settings
DASH_CHART_DATA_POINTS=24
DASH_TREND_ANALYSIS_HOURS=24
DASH_MAX_CRISIS_HISTORY_DAYS=7

# =============================================================================
# DASHBOARD BRANDING & COMMUNITY
# =============================================================================
DASH_DASHBOARD_TITLE="Ash Analytics Dashboard"
DASH_DASHBOARD_SUBTITLE="The Alphabet Cartel Crisis Detection Analytics"
DASH_COMMUNITY_NAME="The Alphabet Cartel"
DASH_COMMUNITY_DISCORD="https://discord.gg/alphabetcartel"
DASH_DASHBOARD_THEME="dark"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
GLOBAL_LOG_LEVEL=info
DASH_LOG_FILE=ash-dash.log
DASH_LOG_DIR=./logs
DASH_ENABLE_ACCESS_LOGS=true
DASH_ENABLE_ERROR_LOGS=true

# Performance Logging
DASH_LOG_API_RESPONSE_TIMES=true
DASH_LOG_SLOW_QUERIES=true
DASH_SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
GLOBAL_API_ENABLE_CORS=true
GLOBAL_API_ALLOWED_ORIGINS=*
DASH_RATE_LIMIT_WINDOW=900000
DASH_RATE_LIMIT_MAX=100
DASH_RATE_LIMIT_MESSAGE="Too many requests, please try again later"

# Security Headers
DASH_DASH_ENABLE_HELMET=true
DASH_ENABLE_CSRF_PROTECTION=false
GLOBAL_SESSION_TOKEN=your_session_secret_here_change_in_production

# IP Filtering (optional)
# GLOBAL_ALLOWED_IPS=10.20.30.0/24,127.0.0.1
# GLOBAL_BLOCKED_IPS=

# =============================================================================
# DATA STORAGE & PERSISTENCE
# =============================================================================
# Redis Configuration (for caching and real-time data)
GLOBAL_REDIS_HOST=ash-dash-redis
GLOBAL_REDIS_PORT=6379
GLOBAL_REDIS_PASSWORD=/run/secrets/redis
DASH_REDIS_DB=0
DASH_REDIS_KEY_PREFIX=ash-dash:

# Data Directories
DASH_DATA_DIR=./data
DASH_CACHE_DIR=./cache
DASH_TEMP_DIR=./temp

# =============================================================================
# API RESPONSE CONFIGURATION
# =============================================================================
# Default responses when services are unavailable
DASH_DEFAULT_BOT_STATUS=unknown
DASH_DEFAULT_NLP_STATUS=unknown
DASH_DEFAULT_CRISIS_COUNT=0
DASH_ENABLE_FALLBACK_DATA=true

# API Retry Configuration
DASH_API_RETRY_ATTEMPTS=3
DASH_API_RETRY_DELAY=1000
DASH_API_CIRCUIT_BREAKER_THRESHOLD=5

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Development Settings
GLOBAL_ENABLE_DEBUG_MODE=false
DASH_ENABLE_MOCK_DATA=false
DASH_MOCK_CRISIS_EVENTS=false

# Hot Reload (development only)
DASH_ENABLE_HOT_RELOAD=false
DASH_WATCH_FILES=false

# =============================================================================
# CRISIS DETECTION DISPLAY SETTINGS
# =============================================================================
# Alert Display Configuration
DASH_SHOW_HIGH_CRISIS_ALERTS=true
DASH_SHOW_MEDIUM_CRISIS_ALERTS=true
DASH_SHOW_LOW_CRISIS_ALERTS=true
DASH_ALERT_FLASH_DURATION=3000

# Crisis Level Colors (CSS color values)
DASH_HIGH_CRISIS_COLOR=#dc2626
DASH_MEDIUM_CRISIS_COLOR=#f59e0b
DASH_LOW_CRISIS_COLOR=#16a34a
DASH_SUCCESS_COLOR=#059669
DASH_WARNING_COLOR=#d97706
DASH_ERROR_COLOR=#dc2626

# =============================================================================
# LEARNING SYSTEM DASHBOARD SETTINGS
# =============================================================================
# Learning Analytics Display
DASH_SHOW_LEARNING_STATS=true
DASH_SHOW_FALSE_POSITIVE_LEARNING=true
DASH_SHOW_FALSE_NEGATIVE_LEARNING=true
DASH_LEARNING_HISTORY_DAYS=7

# Learning Progress Visualization
DASH_LEARNING_CHART_TYPE=line
DASH_LEARNING_DATA_POINTS=168
DASH_SHOW_LEARNING_EFFECTIVENESS=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Real-time Notifications
DASH_ENABLE_BROWSER_NOTIFICATIONS=true
DASH_NOTIFICATION_PERMISSION_REQUEST=true
DASH_CRISIS_NOTIFICATION_SOUND=true

# Email Notifications (optional - future feature)
DASH_ENABLE_EMAIL_NOTIFICATIONS=false
DASH_SMTP_HOST=
DASH_SMTP_PORT=587
DASH_SMTP_USER=
DASH_SMTP_PASS=
DASH_NOTIFICATION_EMAIL=

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Automated Backups
DASH_ENABLE_AUTO_BACKUP=false
DASH_BACKUP_INTERVAL_HOURS=24
DASH_BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# Maintenance Mode
DASH_ENABLE_MAINTENANCE_MODE=false
DASH_MAINTENANCE_MESSAGE="Dashboard is temporarily unavailable for maintenance"

# =============================================================================
# DOCKER SECRETS CONFIGURATION
# =============================================================================
# For production deployment with Docker Secrets, uncomment and use:
# DASH_SSL_CERT_PATH=/run/secrets/ssl_cert
# DASH_SSL_KEY_PATH=/run/secrets/ssl_key
# GLOBAL_SESSION_TOKEN=/run/secrets/session_secret

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================
# 1. Generate SSL certificates for HTTPS:
#    openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -days 365 -nodes
#
# 2. Set strong session secret:
#    GLOBAL_SESSION_TOKEN=$(openssl rand -base64 32)
#
# 3. Configure proper CORS origins:
#    GLOBAL_API_ALLOWED_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com
#
# 4. Enable IP filtering if needed:
#    GLOBAL_ALLOWED_IPS=10.20.30.0/24,your.admin.ip.address
#
# 5. Set appropriate log levels:
#    GLOBAL_LOG_LEVEL=warn (for production)
#
# 6. Configure Redis password:
#    GLOBAL_REDIS_PASSWORD=your_strong_redis_password
#
# 7. Disable debug features:
#    GLOBAL_ENABLE_DEBUG_MODE=false
#    DASH_ENABLE_MOCK_DATA=false